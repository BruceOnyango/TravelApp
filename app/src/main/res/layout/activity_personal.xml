<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:background="@color/black"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/black"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="254dp"
        android:layout_height="254dp"

        android:background="@drawable/circular_bordershape">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="115dp">
            <ImageView
                android:id="@+id/singleImageview"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/woodl"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/singleTitle"
        android:layout_below="@+id/relativeLayout1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/singleDesc"
        android:gravity="center_horizontal"
        android:layout_below="@+id/singleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where"
        android:textColor="@color/white"
        />
</RelativeLayout>

</androidx.cardview.widget.CardView>